@model Carrito
@{
    ViewData["Title"] = "Carrito";
    var total = (decimal)(ViewBag.Total ?? 0m);
}

<h2>Carrito</h2>

@if (!Model.Items.Any())
{
    <p>No hay productos en el carrito.</p>
    <a class="btn btn-primary" asp-controller="Productos" asp-action="Index">Ir al menú</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th><th>Precio</th><th>Cantidad</th><th>Subtotal</th><th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var i in Model.Items)
        {
            var esSesion = i.Id == 0; // id=0 lo usamos para marcar items de sesión
            <tr>
                <td>@i.Producto!.Nombre</td>
                <td>$@i.PrecioUnitario</td>
                <td>
                    <form asp-action="CambiarCantidad" method="post" style="display:flex;gap:.5rem;align-items:center">
                        @if (esSesion)
                        {
                            <input type="hidden" name="productoId" value="@i.ProductoId" />
                        }
                        else
                        {
                            <input type="hidden" name="itemId" value="@i.Id" />
                        }
                        <input type="number" name="cantidad" value="@i.Cantidad" min="1" class="form-control" style="width:90px" />
                        <button class="btn btn-sm btn-secondary" type="submit">Actualizar</button>
                    </form>
                </td>
                <td>$@i.Subtotal</td>
                <td>
                    <form asp-action="Eliminar" method="post" style="display:inline">
                        @if (esSesion)
                        {
                            <input type="hidden" name="productoId" value="@i.ProductoId" />
                        }
                        else
                        {
                            <input type="hidden" name="itemId" value="@i.Id" />
                        }
                        <button class="btn btn-sm btn-danger" type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total</th>
                <th>$@total</th>
                <th></th>
            </tr>
        </tfoot>
    </table>

    <form asp-action="Comprar" method="post">
        <button class="btn btn-success">Comprar</button>
        <a class="btn btn-outline-secondary" asp-controller="Productos" asp-action="Index">Seguir comprando</a>
    </form>
}