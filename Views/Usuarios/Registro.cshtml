@{
    ViewData["Title"] = "Registro";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 400px;">
        <div class="text-center mb-3">
            <img src="~/img/register-icon.png" alt="Registro" width="80" />
            <h3 class="mt-2">Crear cuenta</h3>
        </div>
        <form method="post" asp-action="Registro">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input name="nombre" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input name="correo" type="email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Contrase√±a</label>
                <input name="contrasena" type="password" class="form-control" required />
            </div>
            <button class="btn btn-success w-100">Crear cuenta</button>
        </form>
    </div>
</div>